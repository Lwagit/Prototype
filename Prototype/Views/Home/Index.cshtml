@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claims Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #004d00; /* Dark green background color */
            color: white; /* Text color changed to white for better contrast */
            padding-bottom: 50px; /* Adds padding at the bottom to avoid footer overlap */
        }

        .container {
            max-width: 600px; /* Restrict form width to make it more readable */
            margin-top: 20px; /* Add some space at the top */
        }

        .form-group {
            margin-bottom: 20px; /* Add space between form fields */
        }

        .form-control {
            background-color: #e6e6e6; /* Light background color for form controls */
            color: #000; /* Black text color for form controls */
        }

        .btn-primary {
            background-color: #007700; /* Darker green for submit button */
            border-color: #007700;
        }

            .btn-primary:hover {
                background-color: #005500; /* Even darker green on hover */
                border-color: #005500;
            }

        #successMessage {
            margin-top: 20px; /* Add space above the success message */
        }

        footer {
            position: center;
            height: 0%;
            bottom: 0;
            width: 100%;
            background-color: #004d00;
            text-align: center;
            padding: 10px;
            border-top: 1px solid #e9ecef;
            color: #004d00; /* Dark green text colors in the footer */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center font-weight-bold">LOG-IN</h1> <!-- Add LOG-IN title -->
        <form id="claimsForm">
            <div class="form-group">
                <label for="lectureName">Lecture Name:</label>
                <input type="text" class="form-control" id="lectureName" required />
            </div>
            <div class="form-group">
                <label for="lectureSurname">Lecture Surname:</label>
                <input type="text" class="form-control" id="lectureSurname" required />
            </div>
            <div class="form-group">
                <label for="employeeNo">Employee No:</label>
                <input type="text" class="form-control" id="employeeNo" required />
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </form>

        <!-- Success Message with populated values -->
        <div id="successMessage" class="alert alert-success mt-3" style="display: none;">
            Successfully submitted!<br>
            <strong>Lecture Name:</strong> <span id="lectureNameDisplay"></span><br>
            <strong>Lecture Surname:</strong> <span id="lectureSurnameDisplay"></span><br>
            <strong>Employee No:</strong> <span id="employeeNoDisplay"></span>
        </div>
    </div>

    <script>
        document.getElementById('claimsForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            // Capture form values
            var lectureName = document.getElementById('lectureName').value;
            var lectureSurname = document.getElementById('lectureSurname').value;
            var employeeNo = document.getElementById('employeeNo').value;

            // Display the success message
            document.getElementById('successMessage').style.display = 'block';

            // Populate the success message with the form values
            document.getElementById('lectureNameDisplay').innerText = lectureName;
            document.getElementById('lectureSurnameDisplay').innerText = lectureSurname;
            document.getElementById('employeeNoDisplay').innerText = employeeNo;

            // Clear the form after submission
            document.getElementById('claimsForm').reset();
        });
    </script>

</body>
</html>





